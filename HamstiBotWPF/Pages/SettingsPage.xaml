<Page x:Class="HamstiBotWPF.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HamstiBotWPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding SettingsViewModel, Source={StaticResource ViewModelLocator}}"
      Title="SettingsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Content="Dark theme" 
                Tag="darkTheme.xaml" 
                Command="{Binding ChangeTheInterfaceForDarkTheme}"/>
        <Button Content="Light theme" 
                Grid.Column="1" 
                Tag="lightTheme.xaml"
                Command="{Binding ChangeTheInterfaceForLightTheme}"/>
    </Grid>
</Page>
